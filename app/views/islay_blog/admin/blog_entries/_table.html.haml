= content do
  %table
    %thead
      %tr
        %th.boolean Published
        %th Title
        %th Author
        %th Tags
        %th.indicator Comments
        %th Updated At

    %tbody
      - @blog_entries.each do |entry|
        %tr
          %td
            = boolean_indicator(entry.published?)
          %td
            = link_to(entry.title, path(entry), :class => 'title')
          %td
            = entry.author_name
          %td
            = entry.tags_summary
          %td.indicator
            %span.indicator.neutral= entry.comments_count
          %td.meta
            = update_time(entry)

= footer do
  = new_button('Entry', :blog_entry)
  = paginate(@blog_entries, :theme => 'admin')
